{
  "name": "microservice-template-ts",
  "version": "1.0.0",
  "description": "NodeJS + TypeScript microservice template",
  "main": "index.js",
  "scripts": {
    "start:dev": "npm-run-all -s build -p watch:*",
    "build": "npm-run-all -s build:ts build:deps",
    "build:deps": "sh ./scripts/build.sh",
    "build:ts": "tsc",
    "clean:dist": "rimraf dist",
    "watch:ts": "tsc --watch",
    "watch:node": "nodemon --inspect --delay 2.5"
  },
  "author": "Nestor Diaz",
  "license": "MIT",
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/config": "0.0.34",
    "@types/express": "^4.16.0",
    "@types/node": "^10.9.4",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.9",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "config": "^2.0.1",
    "express": "^4.16.3",
    "express-ping": "^1.4.0",
    "reflect-metadata": "^0.1.12",
    "routing-controllers": "^0.7.7",
    "typedi": "^0.8.0"
  }
}
