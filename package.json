{
  "name": "microservice-template-ts",
  "version": "1.0.0",
  "description": "NodeJS + TypeScript microservice template",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all -s clean:dist build start:simple",
    "start:simple": "node .",
    "start:dev": "npm-run-all -s build -p watch:*",
    "build": "npm-run-all -s build:deps build:ts",
    "build:deps": "sh ./scripts/build.sh",
    "build:ts": "tsc",
    "test": "jest",
    "clean:dist": "rimraf dist",
    "watch:ts": "tsc --watch",
    "watch:node": "nodemon --inspect --delay 2.5"
  },
  "jest": {
    "roots": [
      "<rootDir>/tests/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "author": "Nestor Diaz",
  "license": "MIT",
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/config": "0.0.34",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.2",
    "@types/node": "^10.9.4",
    "jest": "^23.6.0",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.9",
    "ts-jest": "^23.1.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "config": "^2.0.1",
    "express": "^4.16.3",
    "express-ping": "^1.4.0",
    "reflect-metadata": "^0.1.12",
    "routing-controllers": "^0.7.7",
    "typedi": "^0.8.0"
  }
}
